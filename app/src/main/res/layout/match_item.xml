<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/match_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textSize="@dimen/match_number_size"
        app:layout_constraintStart_toStartOf="@id/match_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/match_label"
        tools:text="Qualifier" />

    <TextView
        android:id="@+id/match_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textSize="@dimen/match_number_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/match_level"
        app:layout_constraintBottom_toTopOf="@id/divider"
        tools:text="Match 3 Set 2" />

    <TextView
        android:id="@+id/match_red_alliance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textSize="@dimen/match_team_size"
        android:textColor="@color/red_alliance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/match_level"
        app:layout_constraintHorizontal_bias="0.0"
        tools:text="all red teams" />

    <TextView
        android:id="@+id/match_blue_alliance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textSize="@dimen/match_team_size"
        android:textColor="@color/blue_alliance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/match_red_alliance"
        app:layout_constraintEnd_toStartOf="@id/match_level"
        app:layout_constraintHorizontal_bias="0.0"
        tools:text="all blue teams" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/match_blue_alliance" />
</androidx.constraintlayout.widget.ConstraintLayout>